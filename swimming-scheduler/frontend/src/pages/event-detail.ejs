<% 
    const body = `
    <div class="row">
        <div class="col-12">
            <div id="eventDetails">
                <!-- Event details will be loaded here -->
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Availability Report
                    </h5>
                </div>
                <div class="card-body">
                    <div id="availabilityReport">
                        <!-- Availability report will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="userSelect" class="form-label">Select User:</label>
                                <select class="form-control" id="userSelect">
                                    <option value="">Choose user...</option>
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <button class="btn btn-primary w-100" onclick="setAvailability()">
                                    <i class="fas fa-calendar-check me-2"></i>Set Availability
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="text-center">
                        <button class="btn btn-success btn-sm me-2" onclick="refreshData()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh Data
                        </button>
                        <button class="btn btn-outline-primary btn-sm" onclick="copyEventLink()">
                            <i class="fas fa-link me-1"></i>Copy Link
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const eventId = <%= eventId %>;
        let currentEvent = null;
        let users = [];

        document.addEventListener('DOMContentLoaded', async function() {
            await loadUsers();
            await loadEventDetails();
            await loadAvailabilityReport();
        });

        async function loadUsers() {
            try {
                const response = await axios.get(window.API_URL + '/users');
                if (response.data.success) {
                    users = response.data.data;
                    populateUserSelect();
                }
            } catch (error) {
                console.error('Error loading users:', error);
                showAlert('Error loading users.', 'warning');
            }
        }

        function populateUserSelect() {
            const userSelect = document.getElementById('userSelect');
            userSelect.innerHTML = '<option value="">Choose user...</option>';
            
            users.forEach(user => {
                const option = document.createElement('option');
                option.value = user.id;
                option.textContent = user.name;
                userSelect.appendChild(option);
            });
        }

        async function loadEventDetails() {
            try {
                const response = await axios.get(window.API_URL + '/events/' + eventId);
                if (response.data.success) {
                    currentEvent = response.data.data;
                    displayEventDetails(currentEvent);
                } else {
                    showAlert('Event not found.', 'danger');
                }
            } catch (error) {
                console.error('Error loading event details:', error);
                showAlert('Error loading event details.', 'danger');
            }
        }

        function displayEventDetails(event) {
            const eventDetailsHtml = \`
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="card-title mb-1">\${event.title}</h3>
                                <p class="text-muted mb-0">
                                    Created by \${event.created_by_name} â€¢ 
                                    Status: <span class="badge bg-\${event.status === 'planning' ? 'warning' : event.status === 'confirmed' ? 'success' : 'secondary'}">
                                        \${event.status.charAt(0).toUpperCase() + event.status.slice(1)}
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        \${event.description ? \`<p class="card-text">\${event.description}</p>\` : ''}
                        \${event.location ? \`
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <strong>Location:</strong> \${event.location}
                            </p>
                        \` : ''}
                        
                        <h5 class="mt-4 mb-3">
                            <i class="fas fa-calendar-alt me-2"></i>Proposed Dates
                        </h5>
                        <div class="row">
                            \${event.proposed_dates.map(date => \`
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card border">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">\${formatDate(date.date)}</h6>
                                            \${date.start_time || date.end_time ? \`
                                                <p class="card-text text-muted small mb-0">
                                                    \${date.start_time ? formatTime(date.start_time) : ''} 
                                                    \${date.start_time && date.end_time ? ' - ' : ''}
                                                    \${date.end_time ? formatTime(date.end_time) : ''}
                                                </p>
                                            \` : ''}
                                        </div>
                                    </div>
                                </div>
                            \`).join('')}
                        </div>
                    </div>
                </div>
            \`;
            
            document.getElementById('eventDetails').innerHTML = eventDetailsHtml;
        }

        async function loadAvailabilityReport() {
            try {
                const response = await axios.get(window.API_URL + '/events/' + eventId + '/availability-report');
                if (response.data.success) {
                    displayAvailabilityReport(response.data.data);
                }
            } catch (error) {
                console.error('Error loading availability report:', error);
                showAlert('Error loading availability report.', 'warning');
            }
        }

        function displayAvailabilityReport(report) {
            if (report.length === 0) {
                document.getElementById('availabilityReport').innerHTML = \`
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        No availability data yet. Invite participants to set their availability!
                    </div>
                \`;
                return;
            }

            const reportHtml = report.map(item => \`
                <div class="card mb-3 \${item.availability_percentage >= 80 ? 'border-success' : item.availability_percentage >= 50 ? 'border-warning' : 'border-danger'}">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h6 class="card-title mb-1">\${formatDate(item.date)}</h6>
                                \${item.start_time || item.end_time ? \`
                                    <p class="text-muted small mb-0">
                                        \${item.start_time ? formatTime(item.start_time) : ''} 
                                        \${item.start_time && item.end_time ? ' - ' : ''}
                                        \${item.end_time ? formatTime(item.end_time) : ''}
                                    </p>
                                \` : ''}
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="d-flex align-items-center justify-content-md-end">
                                    <div class="me-3">
                                        <span class="badge bg-success">\${item.available_count}</span> / 
                                        <span class="badge bg-secondary">\${item.total_invited}</span>
                                    </div>
                                    <div class="progress" style="width: 80px;">
                                        <div class="progress-bar \${item.availability_percentage >= 80 ? 'bg-success' : item.availability_percentage >= 50 ? 'bg-warning' : 'bg-danger'}" 
                                             style="width: \${item.availability_percentage}%"></div>
                                    </div>
                                    <small class="text-muted ms-2">\${item.availability_percentage}%</small>
                                </div>
                            </div>
                        </div>
                        \${item.available_users.length > 0 ? \`
                            <div class="mt-2">
                                <small class="text-success">
                                    <i class="fas fa-check me-1"></i>
                                    Available: \${item.available_users.join(', ')}
                                </small>
                            </div>
                        \` : ''}
                        \${item.unavailable_users.length > 0 ? \`
                            <div class="mt-1">
                                <small class="text-danger">
                                    <i class="fas fa-times me-1"></i>
                                    Unavailable: \${item.unavailable_users.join(', ')}
                                </small>
                            </div>
                        \` : ''}
                    </div>
                </div>
            \`).join('');

            document.getElementById('availabilityReport').innerHTML = reportHtml;
        }

        function setAvailability() {
            const userId = document.getElementById('userSelect').value;
            if (!userId) {
                showAlert('Please select a user first.', 'warning');
                return;
            }
            
            window.location.href = \`/availability/\${eventId}/\${userId}\`;
        }

        async function refreshData() {
            showAlert('Refreshing data...', 'info');
            await loadEventDetails();
            await loadAvailabilityReport();
            showAlert('Data refreshed successfully!', 'success');
        }

        function copyEventLink() {
            const eventUrl = window.location.href;
            navigator.clipboard.writeText(eventUrl).then(() => {
                showAlert('Event link copied to clipboard!', 'success');
            }).catch(() => {
                showAlert('Failed to copy link.', 'warning');
            });
        }
    </script>
    `;
%>

<%- include('../components/layout', { title, apiUrl, body }) %>